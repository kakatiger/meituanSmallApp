.mt-tabs-wrap {
    background: #fff;
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    font-size: 0;
    text-align: center;
    border-bottom: 1px #e5e5e5 solid;
    display: flex;
    margin-bottom: 20rpx;
}

.flex-item {
    flex: 1;
}

.mt-tab-item {
    display: inline-block;
    box-sizing: border-box;
    font-size: 28rpx;
    font-weight: 500;
    color: #666;
    height: 88rpx;
}

.mt-tabs-wrap .active {
    border-bottom: 6rpx solid #06c1ae;
}

.active .mt-tab-item {
    color: #06c1ae;
}