.airdrop-layer-mask {
    background: rgba(0,0,0,0.6);
    position: fixed;
    bottom: 0;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
}

.airdrop-layer-box {
    width: 640rpx;
    margin: 0 auto;
    height: 790rpx;
}

.close-btn-wrap {
    height: 80rpx;
    width: 640rpx;
    margin: 0 auto 30rpx;
    display: flex;
    justify-content: flex-end;
}

.close-btn {
    background: url('data:image/png;charset=utf-8;base64,') no-repeat;
    background-size: 100% auto;
    width: 80rpx;
    height: 80rpx;
}