<template name="spider-error">
    <view class="ui-error-container ui-error-spider-container" wx:if="{{show}}">
        <view class="ui-error ui-error-spider">
            <view class="ui-error-txt"> {{message}} </view>
            <view bindtap="onClickBaseComponent" class="ui-btn ui-error-btn" data-action="ok" data-persist="1" data-type="{{type}}" wx:if="{{textOK}}"> {{textOK}} </view>
            <view class="ui-error-txt"> IP地址:{{customer_ip}} </view>
        </view>
    </view>
</template>
