.header-loc-nav {
    flex: 0 0 auto;
    max-width: 750px;
    transition: 300ms max-width;
    overflow: hidden;
}

.header-loc-nav.hide {
    max-width: 0;
}

.header-loc {
    margin-left: 20rpx;
    border-radius: 83rpx;
    max-width: 300rpx;
    height: 58rpx;
    font-size: 28rpx;
    color: #000;
    padding-left: 16rpx;
    box-sizing: border-box;
}

.header-loc-icon {
    width: 20rpx;
    height: 27rpx;
    margin-right: 10rpx;
    flex: 0 0 auto;
}

.header-loc-text {
    font-size: 32rpx;
    flex: 1 1 auto;
}

.header-loc-arrow {
    margin-left: 10rpx;
    width: 10rpx;
    height: 19rpx;
    background-image: url('data:image/png;charset=utf-8;base64,');
    flex: 0 0 auto;
}