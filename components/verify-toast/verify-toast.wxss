.verify-toast-bg {
    background: rgba(0,0,0,0.5);
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 10000;
}

.verify-toast-container {
    background: #fff;
    width: 560rpx;
    position: absolute;
    left: 50%;
    top: 50%;
    -webkit-transform: translate(-50%,-50%);
    text-align: center;
    border-radius: 16rpx;
}

.verify-close {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    right: 15rpx;
    top: 20rpx;
    background: url('data:image/png;charset=utf-8;base64,');
    background-size: contain;
}

.verify-title {
    font-size: 34rpx;
    color: #333;
    height: 48rpx;
    line-height: 48rpx;
    margin-top: 70rpx;
    margin-bottom: 40rpx;
    text-align: center;
}

.verify-image {
    width: 164rpx;
    height: 80rpx;
    margin: 0 auto 40rpx;
}

.verify-input {
    font-size: 32rpx;
    color: #333;
    width: 320rpx;
    text-align: left;
}

.verify-input-placeholder {
    color: #999;
}

.verify-input-box {
    width: 360rpx;
    height: 46rpx;
    border-bottom: 1rpx solid #FFD161;
    margin: 0 auto;
    position: relative;
    padding-bottom: 4rpx;
}

.verify-clear {
    width: 24rpx;
    height: 24rpx;
    background: url('data:image/png;charset=utf-8;base64,');
    background-size: contain;
    position: absolute;
    right: 0;
    top: 14rpx;
}

.verify-button {
    background: #FFD161;
    border-radius: 4rpx;
    color: #333;
    font-size: 32rpx;
    text-align: center;
    width: 480rpx;
    height: 80rpx;
    line-height: 80rpx;
    margin: 40rpx auto;
}