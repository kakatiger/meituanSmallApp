.no-net-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #FFFFFF;
}

.no-net {
    width: 100%;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
}

.no-net-img {
    width: 252rpx;
    height: 231rpx;
}

.no-net-txt {
    font-size: 28rpx;
    color: #666;
    margin: 30rpx 0 40rpx 0;
}

.refresh-btn {
    width: 240rpx;
    height: 68rpx;
    color: #333;
    font-size: 32rpx;
    border-radius: 4rpx;
    background-color: #ffd161;
}