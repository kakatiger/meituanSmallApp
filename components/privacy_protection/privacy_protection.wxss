.mask {
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    z-index: 99;
    background-color: rgba(0,0,0,0.66);
    width: 100%;
    height: 100%;
}

.bounce {
    position: absolute;
    z-index: 1002;
    background-color: #fff;
    border-radius: 16rpx;
    width: 560rpx;
    left: 50%;
    top: 10%;
    transform: translate3d(-50%,0,0);
}

.header-block {
    text-align: center;
    position: relative;
}

.footer-block {
    position: relative;
    height: 90rpx;
}

.header-block:after {
    content: '';
    position: absolute;
    left: 0;
    bottom: 0;
    right: 0;
    display: block;
    height: 1px;
    transform: scaleY(0.5);
    background-color: #D8D8D8;
}

.cancel {
    position: relative;
    display: inline-block;
    font-size: 32rpx;
    color: #333333;
    width: 50%;
    line-height: 90rpx;
    text-align: center;
}

.cancel:after {
    content: '';
    display: block;
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    width: 1px;
    height: 100%;
    background-color: #D8D8D8;
    transform: scaleX(0.5);
}

.call {
    display: inline-block;
    font-size: 32rpx;
    color: #CCCCCC;
    width: 50%;
    text-align: center;
    line-height: 90rpx;
}

.privacy-icon {
    position: relative;
    width: 200rpx;
    height: 200rpx;
    margin: 30rpx 0;
}

.bounce-info {
    font-size: 28rpx;
    color: #333;
}

.bounce-number {
    font-size: 46rpx;
    color: #333;
    line-height: 46rpx;
    margin-top: 30rpx;
}

.modify {
    font-size: 28rpx;
    color: #FFB000;
    padding: 60rpx 0 50rpx;
}

.call-btn-highlight {
    color: #FFB000;
    font-weight: 600;
}

.write-title {
    font-size: 32rpx;
    color: #333333;
    font-weight: 600;
    text-align: center;
    margin-top: 60rpx;
}

.input-wrap {
    position: relative;
    padding: 40rpx 42rpx 80rpx 42rpx;
}

.input-content {
    position: relative;
    padding: 26rpx 17rpx;
}

.input-content:after {
    content: ' ';
    position: absolute;
    top: 0;
    left: 0;
    width: 200%;
    height: 200%;
    border: 1px solid #ccc;
    border-radius: 4rpx;
    box-sizing: border-box;
    transform-origin: 0 0;
    transform: scale(0.5);
}

.input-wrap.error .input-content:after {
    border-color: #FB4E44;
}

.input-content .number-in {
    width: 409rpx;
    font-size: 32rpx;
    color: #333;
    text-align: left;
}

.placeholder {
    color: #CCC;
}

.clear-icon {
    position: absolute;
    right: 20rpx;
    top: 50%;
    transform: translateY(-50%);
    width: 30rpx;
    height: 30rpx;
    z-index: 100;
}

.error {
    border-color: #FB4E44;
}

.error-msg {
    display: none;
    position: absolute;
    left: 42rpx;
    bottom: 35rpx;
    font-size: 24rpx;
    color: #FB4E44;
}

.input-wrap.error .error-msg {
    display: block;
}

.exception-main-msg {
    font-size: 32rpx;
    color: #333333;
    font-weight: 600;
    text-align: center;
    margin: 60rpx 42rpx 0 42rpx;
}

.exception-sub-msg {
    font-size: 28rpx;
    color: #333333;
    text-align: center;
    padding: 30rpx 0 60rpx;
}