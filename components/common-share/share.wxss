.common-share {
    position: absolute;
    left: 20rpx;
    bottom: 160rpx;
    width: 174rpx;
    height: 70rpx;
    z-index: 102;
}

.common-share.is-ipx {
    bottom: 228rpx;
}

.authorize-btn,.together-share {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
}

.authorize-btn {
    z-index: 22;
    background-color: transparent;
    border-radius: 300rpx;
}

.together-share {
    z-index: 20;
}

.common-share .btn {
    position: absolute;
    left: 0;
    top: 0;
    display: flex;
    width: 100%;
    height: 100%;
    align-items: center;
    background-image: linear-gradient(-180deg,rgba(18,20,26,0.80) 0%,rgba(26,26,26,0.80) 100%);
    box-shadow: 0 0 10px 0 rgba(0,0,0,0.25);
    border-radius: 300rpx;
    padding: 0;
    line-height: normal;
    text-align: left;
    z-index: 10;
}

.common-share .icon {
    width: 50rpx;
    height: 50rpx;
    margin: 0 10rpx;
}

.common-share .btn-title {
    font-size: 22rpx;
    color: #fff;
}

.transparent-layer {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: 12;
}