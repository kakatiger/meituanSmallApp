.logo image,.product-img {
    background-color: #f4f4f4;
}

.bg {
    background: #ddd;
}

.f-c-c {
    display: flex;
    align-items: center;
    justify-content: center;
}

.f-s-c {
    display: flex;
    align-items: center;
    justify-content: flex-start;
}

.ad-platinum {
    position: relative;
    z-index: 0;
}

.platinum {
    padding: 0 20rpx 20rpx 20rpx;
}

.shadow {
    box-shadow: 2rpx 4rpx 16rpx rgba(0,0,0,0.06);
}

.ad-position-holder {
    width: 100%;
    height: 1px;
    background: transparent;
}

.shop-info {
    position: relative;
    z-index: 0;
    overflow: hidden;
    height: 169rpx;
}

.bg,.mask {
    position: absolute;
    z-index: 0;
    width: 100%;
    height: 100%;
}

.tag {
    position: absolute;
    z-index: 2;
}

.mask {
    z-index: 1;
    background: linear-gradient(rgba(0,0,0,0.30),rgba(0,0,0,0.50));
}

.main-tag {
    top: 0;
    right: 20rpx;
    width: 56rpx;
    height: 64rpx;
}

.ad-tag {
    bottom: 10rpx;
    right: 10rpx;
    width: 36rpx;
    height: 20rpx;
}

.ad-tag {
    opacity: 0.5;
    font-family: PingFangSC-Regular;
    font-size: 14rpx;
    color: #FFFFFF;
    letter-spacing: 0;
    line-height: 14rpx;
    opacity: 0.2;
    background: #000000;
}

.info-box {
    position: absolute;
    left: 0;
    top: 0;
    z-index: 3;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: space-between;
    padding: 14rpx 20rpx;
    box-sizing: border-box;
}

.slogan {
    font-family: PingFangSC-Semibold;
    font-size: 32rpx;
    color: #FFFFFF;
    line-height: 36rpx;
}

.info {
    display: flex;
    align-items: center;
    justify-content: flex-start;
}

.logo {
    flex-shrink: 0;
    width: 90rpx;
    height: 90rpx;
    border-radius: 4rpx;
    border: 1rpx solid rgba(255,255,255,0.5);
    overflow: hidden;
    box-sizing: content-box;
    font-size: 0;
}

.logo image {
    width: 90rpx;
    height: 90rpx;
    border-radius: 4rpx;
    box-sizing: border-box;
}

.main-info {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    flex-shrink: 0;
    margin-left: 21rpx;
    height: 90rpx;
    padding: 10rpx 0 6rpx 0;
    box-sizing: border-box;
    overflow: hidden;
}

.shop-name {
    font-family: PingFangSC-Medium;
    font-size: 28rpx;
    color: #FFFFFF;
    line-height: 28rpx;
    text-shadow: 0 0 7rpx rgba(0,0,0,0.30);
    max-width: 304rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.coupon-list {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    flex-shrink: 0;
    height: 30rpx;
}

.coupon {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0 8rpx;
    height: 30rpx;
    line-height: 30rpx;
    text-align: center;
    font-family: PingFangSC-Regular;
    font-size: 20rpx;
    color: #FFFFFF;
    background: #FB4E44;
}

.coupon-box {
    display: flex;
    align-items: center;
    justify-content: center;
}

.coupon-png {
    width: 5rpx;
    height: 30rpx;
}

.coupon-item:not(:first-child) {
    margin-left: 10rpx;
}

.productInfo {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    background: #FFFFFF;
    border-bottom-left-radius: 4rpx;
    border-bottom-right-radius: 4rpx;
    height: 191rpx;
    padding: 16rpx 20rpx;
    border: 1rpx solid #E4E4E4;
    box-sizing: border-box;
}

.product {
    width: 180rpx;
}

.product-intro {
    position: relative;
    width: 180rpx;
    height: 134rpx;
    border-radius: 4rpx;
    overflow: hidden;
}

.product-img-mask {
    position: absolute;
    left: 0;
    top: 0;
    z-index: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.05);
}

.product-name {
    position: absolute;
    left: 0;
    bottom: 0;
    z-index: 1;
    padding: 0 10rpx 0 10rpx;
    width: 180rpx;
    height: 34rpx;
    box-sizing: border-box;
    background: rgba(0,0,0,0.5);
}

.product-name view {
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #FFFFFF;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.product-img {
    width: 180rpx;
    height: 135rpx;
}

.product-price {
    margin-top: 6.2rpx;
    display: flex;
    width: 100%;
    height: 28rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.now {
    font-family: PingFangSC-Medium;
    font-size: 26rpx;
    line-height: 28rpx;
    color: #FB4E44;
}

.symbol {
    font-size: 22rpx;
}

.normal {
    margin-left: 8.2rpx;
    font-family: PingFangSC-Regular;
    font-size: 22rpx;
    line-height: 28rpx;
    text-decoration: line-through;
    color: #999999;
}