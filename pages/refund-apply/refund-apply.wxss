.page-scroll {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.radio-pic {
    width: 36rpx;
    height: 36rpx;
}

.radio {
    width: 36rpx;
    height: 36rpx;
    box-sizing: border-box;
    border: 2rpx solid #C4C4C4;
    background: #fff;
    border-radius: 50%;
}

.radio-check {
    position: relative;
    border: none;
    background: #FFD161;
}

.radio-check::after {
    position: absolute;
    content: '';
    left: 10rpx;
    top: 10rpx;
    width: 15rpx;
    height: 9rpx;
    border: 1rpx solid #333;
    transform: rotate(-45deg);
    border-width: 0 0 2rpx 2rpx;
}

.restaurant-info {
    display: flex;
    align-items: center;
    background: #fff;
    padding: 30rpx;
}

.restaurant-img {
    width: 40rpx;
    height: 40rpx;
    border-radius: 100%;
    margin-right: 20rpx;
    overflow: hidden;
}

.restaurant-img image {
    width: 40rpx;
    height: 40rpx;
    object-fit: fit;
}

.restaurant-intro {
    flex: 1;
    overflow: hidden;
}

.restaurant-name {
    line-height: 40rpx;
    font-size: 28rpx;
    color: #666;
    font-weight: bolid;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.order-info {
    line-height: 32rpx;
    margin-top: 6rpx;
    font-size: 24rpx;
    color: #999;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.restaurant-delivery-new {
    position: relative;
    width: 100rpx;
    height: 30rpx;
}

.restaurant-dvy {
    position: relative;
    width: 100rpx;
    height: 30rpx;
    line-height: 30rpx;
    background: rgba(255,209,97,0.20);
    text-align: center;
    font-size: 20rpx;
    color: #FF9F00;
}

.restaurant-dvy::before,.restaurant-dvy::after {
    content: '';
    position: absolute;
    width: 0;
    height: 0;
    font-size: 0;
    border: 4rpx solid #fff;
}

.restaurant-dvy::before {
    left: 0;
    right: 0;
    border-color: #fff rgba(255,209,97,0.20) rgba(255,209,97,0.20) #fff;
}

.restaurant-dvy::after {
    right: 0;
    bottom: 0;
    border-color: rgba(255,209,97,0.20) #fff #fff rgba(255,209,97,0.20);
}

.refund-sec {
    background: #fff;
}

.refund-foods-sec {
    padding-bottom: 20rpx;
}

.refund-title {
    height: 73rpx;
    line-height: 93rpx;
    padding-left: 30rpx;
    font-size: 24rpx;
    color: #666;
    background-color: #F4F4F4;
}

.refund-type {
    display: flex;
    height: 80rpx;
    margin-left: 30rpx;
}

.refund-type-text {
    flex: 1;
    font-size: 28rpx;
    color: #333;
    line-height: 80rpx;
}

.pay-check {
    margin: 22rpx 30rpx 0 0;
}

.choose-all {
    display: flex;
    height: 70rpx;
    margin-left: 30rpx;
}

.choose-all-check {
    padding: 30rpx 20rpx 20rpx 0;
}

.choose-all-text {
    flex: 1;
    font-size: 24rpx;
    color: #333;
    line-height: 70rpx;
}

.refund-foodlist {
}

.food-item {
    display: flex;
    position: relative;
    height: 110rpx;
    padding: 20rpx 30rpx;
    background: #F8F8F8;
}

.food-item:not(:first-child) {
    margin-top: 10rpx;
}

.food-price {
    position: absolute;
    top: 18rpx;
    right: 30rpx;
    font-size: 28rpx;
    color: #333;
}

.choose-single-check {
    padding: 37rpx 30rpx 37rpx 0;
}

.single-check-hidden {
    opacity: 0;
}

.food-img {
    width: 110rpx;
    height: 110rpx;
    min-width: 110rpx;
    margin-right: 20rpx;
    overflow: hidden;
}

.food-img image {
    width: 100%;
    height: 100%;
}

.food-info {
    flex: 1;
}

.food-name {
    font-size: 28rpx;
    color: #333;
    line-height: 40rpx;
    max-width: 300rpx;
}

.food-label {
    display: inline-block;
    width: 30rpx;
    height: 30rpx;
    margin-right: 10rpx;
    vertical-align: -2rpx;
}

.food-sub-name,.food-num {
    margin-top: 5rpx;
    height: 32rpx;
    line-height: 32rpx;
    font-size: 24rpx;
    color: #999;
}

.food-name,.food-sub-name {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.food-pn {
    width: 155rpx;
    text-align: right;
}

.food-oprt {
    position: relative;
    margin-top: 70rpx;
    width: 155rpx;
    height: 36rpx;
}

.refund-add-img {
    position: absolute;
    right: 0;
    top: 0;
    width: 36rpx;
    height: 36rpx;
}

.refund-add {
    position: absolute;
    right: -10rpx;
    top: -10rpx;
    width: 56rpx;
    height: 56rpx;
}

.refund-num {
    position: absolute;
    right: 36rpx;
    width: 55rpx;
    height: 36rpx;
    line-height: 42rpx;
    font-size: 24rpx;
    color: #333;
    text-align: center;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.refund-remove-img {
    position: absolute;
    right: 91rpx;
    top: 0;
    width: 36rpx;
    height: 36rpx;
}

.refund-remove {
    position: absolute;
    right: 81rpx;
    top: -10rpx;
    width: 56rpx;
    height: 56rpx;
}

.food-refund-text {
    margin-top: 78rpx;
    line-height: 32rpx;
    color: #FFB000;
    font-size: 24rpx;
}

.refund-tips {
    font-size: 22rpx;
    color: #999;
}

.refund-fee-sec {
    display: flex;
    align-items: center;
    line-height: 40rpx;
    margin: 20rpx 30rpx 0;
    box-sizing: border-box;
    height: 70rpx;
}

.refund-fee-text {
    flex: 3;
    color: #333;
    font-size: 28rpx;
    text-align: right;
}

.refund-fee-text-word {
    font-weight: 500;
    font-size: 32rpx;
    color: #151515;
    line-height: 30rpx;
}

.refund-fee-text view {
    display: inline;
}

.refund-fee {
    text-align: right;
    flex: 1;
    font-size: 32rpx;
    color: rgb(248,80,74);
}

.refund-fee-tip {
    margin: 10rpx 30rpx 0;
    line-height: 33rpx;
    color: #999;
    font-size: 24rpx;
}

.refund-reason {
    position: relative;
    margin-left: 30rpx;
    height: 88rpx;
    line-height: 88rpx;
    font-size: 28rpx;
    color: #333;
}

.refund-reason:before {
    content: '';
    position: absolute;
    height: 1rpx;
    width: 100%;
    bottom: 0;
    left: 0;
    background: #E5E5E5;
    transform: scaleY(0.5);
}

.refund-reason::after {
    content: '';
    position: absolute;
    right: 35rpx;
    top: 37rpx;
    width: 14rpx;
    height: 14rpx;
    border: 1rpx solid #999;
    border-width: 1rpx 1rpx 0 0;
    transform: rotate(45deg);
}

.refund-reason-text {
    margin: 0 30rpx;
    color: #333;
    font-size: 28rpx;
    padding-bottom: 30rpx;
}

.refund-reason-text input,.refund-reason-text textarea {
    position: relative;
    height: 80rpx;
    line-height: 80rpx;
}

.reason-text-placeholder {
    height: 80rpx;
    line-height: 80rpx;
    color: #999;
}

.oprt-btn {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    background: #FFD161;
    font-size: 32rpx;
    color: #333;
    z-index: 1;
}

.oprt-btn-placeholder {
    height: 100rpx;
    margin-top: 20rpx;
}

.refund-insurance {
    margin-left: 30rpx;
    border-bottom: 1px solid #E4E4E4;
    padding: 20rpx 30rpx 20rpx 0;
}

.refund-insurance-top {
    height: 40rpx;
}

.refund-insurance-name {
    float: left;
    font-size: 28rpx;
}

.refund-insurance-fee {
    float: right;
    font-size: 32rpx;
    color: #FB4E44;
}

.refund-insurance-tip {
    line-height: 33rpx;
    font-size: 24rpx;
    color: #999;
    text-align: right;
}

.refund-way {
    position: relative;
    display: flex;
    padding: 24rpx 0 24rpx 0;
    margin-left: 30rpx;
    height: 125rpx;
    box-sizing: border-box;
    align-items: center;
}

.refund-way.disabled .refund-way-text,.refund-way.disabled .refund-way-text .refund-way-title,.refund-way.disabled .refund-way-text .refund-way-tip {
    color: #ccc;
}

.refund-way:not(:last-child):before {
    content: '';
    position: absolute;
    height: 1rpx;
    width: 100%;
    top: 124rpx;
    left: 0;
    background: #e5e5e5;
    transform: scaleY(0.5);
}

.refund-way-text {
    display: flex;
    flex: 1;
    flex-direction: column;
}

.refund-way-question {
    width: 30rpx;
    height: 30rpx;
    display: inline-block;
    line-height: 30rpx;
    text-align: center;
    margin-left: 10rpx;
}

.refund-way-title {
    display: flex;
    align-items: center;
    font-size: 28rpx;
    line-height: 40rpx;
    color: #333;
}

.refund-way-tip {
    font-size: 24rpx;
    color: #999;
}

.refund-way-radio {
    padding-right: 30rpx;
}

.refund-reason-add-image {
    width: 64rpx;
    height: 51rpx;
}

.refund-reason-image-word {
    font-size: 24rpx;
    color: rgba(0,0,0,0);
    opacity: 0;
    line-height: 33rpx;
}

.refund-reason-image-word-real {
    position: absolute;
    width: 100%;
    color: #666;
    text-align: center;
    bottom: 15rpx;
}

.refund-reason-image-add {
    width: 146rpx;
    height: 146rpx;
    display: flex;
    position: relative;
    align-items: center;
    flex-direction: column;
    justify-content: center;
}

.refund-shipping {
    padding: 30rpx;
    position: relative;
}

.refund-shipping:before {
    content: '';
    position: absolute;
    height: 1rpx;
    width: calc(100% - 30rpx);
    bottom: 1rpx;
    right: 0;
    background: #e4e4e4;
    transform: scaleY(0.5);
}

.refund-shipping-list {
    display: flex;
    padding-left: 60rpx;
    justify-content: space-between;
}

.refund-shipping-name,.refund-shipping-price {
    font-size: 28rpx;
    color: #333;
    line-height: 40rpx;
}

.refund-reason-image-box {
    position: relative;
    margin-right: 30rpx;
    margin-bottom: 30rpx;
    height: 146rpx;
    width: 146rpx;
}

.refund-reason-image-add:after,.refund-reason-image-box:after {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    width: 200%;
    height: 200%;
    border: 1rpx solid #e4e4e4;
    transform-origin: -1rpx -1rpx;
    transform: scale(0.5,0.5);
}

.refund-reason-image-box:nth-of-type(4) {
    margin-right: 0!important;
}

.refund-reason-image-box:nth-of-type(5),.refund-reason-image-box:nth-of-type(6) {
    margin-bottom: 0!important;
}

.refund-reason-image,.refund-reason-image-mask {
    height: 100%;
    width: 100%;
}

.refund-reason-image-mask {
    z-index: 2;
    position: absolute;
    bottom: 0;
    left: 0;
    background-color: rgba(0,0,0,0.5);
}

.refund-reason-image-mask-word-box {
    z-index: 2;
    height: 100%;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.refund-reason-image-mask-word-box>view {
    font-size: 24rpx;
    color: #fff;
    text-align: center;
}

.refund-reason-image-delete {
    position: absolute;
    top: -15rpx;
    right: -15rpx;
    height: 40rpx;
    width: 40rpx;
    z-index: 3;
}

.refund-reason-image-group {
    display: flex;
    flex-wrap: wrap;
}

.refund-shipping-price.delete {
    text-decoration: line-through;
}

.refund-shipping-tip {
    font-size: 22rpx;
    color: #999;
    text-align: right;
}